<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emmalady.baitapbuoi3.Bai3Activity"
    android:background="#000">

    <TableRow  android:weightSum="1">
        <Button
            android:id="@+id/btnColor1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Color 1"
            android:textColor="@color/Red"
            android:layout_weight="0.1"
            android:foreground="@color/Red" />
        <Button
            android:id="@+id/btnColor2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Color 2"
            android:textColor="@color/Yellow"
            android:layout_weight="0.1"
            android:foreground="@color/Yellow"/>
        <Button
            android:id="@+id/btnColor3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Color 3"
            android:textColor="@color/Blue"
            android:layout_weight="0.8"
            android:foreground="@color/Blue"/>
    </TableRow>

    <TableRow  android:weightSum="1">

        <TextView
            android:id="@+id/tvSetColor"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="#FFF" />
    </TableRow>

    <TableRow
        android:weightSum="1">
        <Button
            android:id="@+id/btnNext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Next"
            android:layout_weight="0.1"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0.1"/>
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_weight="0.8"
            />
    </TableRow>

</TableLayout>
